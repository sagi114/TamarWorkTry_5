@model _15_11TamarProjectTry3.Models.Student
@{
    ViewData["Title"] = "Index";
}

    <div class="FormDiv">

        <h1>Register:</h1>
        <form asp-action="SaveStudentInformation">
            
            @if (ViewBag.isValid == false)
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <strong>You didnt input the information please try again!!!!!</strong><br /> @Html.ValidationSummary()
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
            <div>
                @Html.LabelFor(s => s.MyId)
            </div>
            <div>
                @Html.EditorFor(s => s.MyId)
            </div>
            <div>
                @Html.LabelFor(s => s.FirstName)
            </div>
            <div>
                <input class="text-box single-line" data-val="true" data-val-required="Please enter a first name." id="FirstName" name="FirstName" type="text" value="" autocomplete = "off" />
                @*@Html.EditorFor(s => s.FirstName)*@
            </div>
            <div>
                @Html.LabelFor(s => s.LastName)
            </div>
            <div>
                <input class="text-box single-line" data-val="true" data-val-required="Please enter a last name." id="LastName" name="LastName" type="text" value="" autocomplete = "off" />
                @*@Html.EditorFor(s => s.LastName)*@
            </div>
            <input type="hidden" name="StudentsQuestionInfo" value="@null" />
            <div><input type="submit" /></div>
        </form>
    </div>



