@model _15_11TamarProjectTry3.Models.Student
@{
    ViewData["Title"] = "Register";
}

<div class="FormDiv">

    <h1>Register:</h1>
    <form asp-action="Index">
        @if (ViewBag.isValid == false)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>You didnt input the information please try again!!!!!</strong><br /> @Html.ValidationSummary()
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        <div>
            @Html.LabelFor(s => s.MyId)
        </div>
        <div>
            @Html.EditorFor(s => s.MyId)
        </div>
        <div>
            @Html.LabelFor(s => s.FirstName)
        </div>
        <div>
            @Html.EditorFor(s => s.FirstName)
        </div>
        <div>
            @Html.LabelFor(s => s.LastName)
        </div>
        <div>
            @Html.EditorFor(s => s.LastName)
        </div>
        <div><input type="submit" /></div>
    </form>
</div>

